  <div class="main-body story-container">
    <div class="wrapper-story">
      <div class ="story-heading">
        <div class ="title-author-label">
        <h1 id="title"></h1>
        <p id="author"></p>
        </div>
<!-- Toggle button not working, default hidden not display that way -->
        <p id='complete'></p>
        <div class="progress-toggle hidden">
          <p class="complete-toggle hidden">COMPLETE</p>
          <p class="ongoing-toggle pressed-ongoing hidden">ON GOING</p>
        </div>
        <p id="genre"></p>
      </div>
      <p id="story-text"></p>
      <div id="accepted-contributions-container"></div>
  <!--------------- BLOCK FORM------------------------------------------------------------->
  <section class="new-block hidden">

              <form class="form-group" id="new-post-form" action="/stories/<%= id %>/contributions/new" method="POST">
                <label for="block-text">What comes next?</label>

                <textarea name="title" id="subtitle" required rows="1"></textarea>
                <textarea name="flavour_text" id="caption" required rows="1"></textarea>
                <textarea name="chapter_photo_url" id="photo" rows="1"></textarea>
                <textarea name="text" id="block-text" required rows="1"></textarea>

                <div class="form-footer">
                  <div>
                      <label for="genre-drop">GENRE:</label>
                      <select id="genre-drop" name="genre-drop">
                        <option value="volvo">sci-fi</option>
                        <option value="saab">romance</option>
                        <option value="fiat" selected>adventure</option>
                        <option value="audi">thriller</option>
                        <option value="audi">fantasy</option>
                        <option value="audi">mystery</option>
                        <option value="audi">historical fiction</option>
                      </select>
                  </div>
                  <button class="submit-block-btn" type="submit">SUBMIT</button>
                </div>
              </form>
  </section>
  <!--------------- BLOCK FORM------------------------------------------------------------->

      <div class="add-block-btn">
        <i class="fas fa-plus"></i>
        <p>Add a block</p>
      </div>






